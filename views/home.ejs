<% include ./partials/header %>


    <!-- Page Header -->
    <header class="masthead" style="background-image: url('https://cdn.pixabay.com/photo/2019/07/13/11/58/bachalpsee-4334666_960_720.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>Blog</h1>
                        <span class="subheading">A Blog Theme by hasan</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">

        <% foundBlogs.forEach( (blog) => { %>


        <div class="row">
            <div class="col-lg-3 mx-auto">
                <img class="img-thumbnail" src="<%= blog.comImage %>" alt="blog images">
            </div>

            <div class="col-lg-9 mx-auto">
                <div class="post-preview">
                    <a href="/blogs/<%=blog._id %>">
                        <h2 class="post-title">
                            <%=    blog.title %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%=    blog.comSentence %>
                        </h3>
                    </a>
                    <p class="post-meta">Posted by
                        <a href="#">hsn</a> <%=  blog.date %></p>
                </div>
                <hr>


                <!-- Pager -->

            </div>
        </div>
        <%  }); %>
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
    </div>

    <hr>


<% include ./partials/footer %>
